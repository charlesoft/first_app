<%= form_for(user) do |f|%>

<div class="field">
	<%= f.label :name %>
	<%= f.text_field :name%>

</div>

<div class="field">
	<%= f.label :email %>
	<%= f.text_field :email%>

</div>

<div class="field">
	<%= f.label :age %>
	<%= f.number_field :age%>

</div>

<div class="field">
	<%= f.label :gender %>
	<%= f.number_field :gender %>

</div>

<div class="actions">
	<%= f.submit :class => "btn btn-primary" %>
	<%= link_to "Voltar", users_path, :class => "btn" %>
</div>

<% end %>